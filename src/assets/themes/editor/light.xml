<?xml version="1.0" encoding="UTF-8"?>
<!--
  Light theme for Marco Editor
  Based on LIGHT_PALETTE: background: "#FAFAFA", text: "#24292E"
-->
<style-scheme id="marco-light" name="Marco Light" version="1.0" kind="light">
  <author>Kim Skov Rasmussen</author>
  <description>Light theme with clean appearance</description>

  <!-- Color definitions -->
  <color name="white"              value="#FFFFFF"/>
  <color name="light-bg"           value="#FAFAFA"/>
  <color name="light-text"         value="#24292E"/>
  <color name="light-selection"    value="#0366D6"/>
  <color name="light-selection-bg" value="#C8E1FF"/>
  <color name="light-cursor"       value="#0969DA"/>
  <color name="light-line-num"     value="#6E7781"/>
  <color name="light-line-num-bg"  value="#F6F8FA"/>
  <color name="light-current-line" value="#F6F8FA"/>
  <color name="light-bracket"      value="#0969DA"/>
  <color name="light-comment"      value="#6E7781"/>
  <color name="light-keyword"      value="#CF222E"/>
  <color name="light-string"       value="#0A3069"/>
  <color name="light-number"       value="#0550AE"/>
  <!-- Scrollbar styling for GTK editor matching webview preview -->
  <color name="scrollbar-thumb"   value="#D0D4D8"/>
  <color name="scrollbar-track"   value="#F0F0F0"/>

  <!-- Base text appearance -->
  <style name="text"                  foreground="light-text" background="light-bg"/>
  <style name="selection"             foreground="white" background="light-selection"/>
  <style name="selection-unfocused"   background="light-selection-bg"/>
  <style name="cursor"                foreground="light-cursor"/>
  <style name="secondary-cursor"      foreground="light-cursor"/>
  <style name="current-line"          background="light-current-line"/>
  
  <!-- Line numbers and margin -->
  <style name="line-numbers"          foreground="light-line-num" background="light-line-num-bg"/>
  <style name="current-line-number"   foreground="light-text" background="light-current-line" bold="true"/>
  <style name="line-numbers-border"   background="light-line-num-bg"/>
  
  <!-- Brackets -->
  <style name="bracket-match"         foreground="light-bracket" bold="true"/>
  <style name="bracket-mismatch"      foreground="#CF222E" background="#FFEBE9"/>
  
  <!-- Right margin -->
  <style name="right-margin"          foreground="light-line-num" background="light-bg"/>
  
  <!-- Spaces and whitespace -->
  <style name="draw-spaces"           foreground="light-line-num"/>
  
  <!-- Search highlighting -->
  <style name="search-match"          foreground="light-text" background="#FFD700" bold="true"/>
</style-scheme>