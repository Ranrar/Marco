<?xml version="1.0" encoding="UTF-8"?>
<!--
  Light theme for Marco Editor
  Based on LIGHT_PALETTE: background: "#FAFAFA", text: "#24292E"
-->
<style-scheme id="marco-light" name="Marco Light" version="1.0" kind="light">
  <author>Marco Editor</author>
  <description>Light theme with clean appearance</description>

  <!-- Color definitions -->
  <color name="white"              value="#FFFFFF"/>
  <color name="light-bg"           value="#FAFAFA"/>
  <color name="light-text"         value="#24292E"/>
  <color name="light-selection"    value="#0366D6"/>
  <color name="light-selection-bg" value="#C8E1FF"/>
  <color name="light-cursor"       value="#0969DA"/>
  <color name="light-line-num"     value="#6E7781"/>
  <color name="light-line-num-bg"  value="#F6F8FA"/>
  <color name="light-current-line" value="#F6F8FA"/>
  <color name="light-bracket"      value="#0969DA"/>
  <color name="light-comment"      value="#6E7781"/>
  <color name="light-keyword"      value="#CF222E"/>
  <color name="light-string"       value="#0A3069"/>
  <color name="light-number"       value="#0550AE"/>
  <!-- Scrollbar styling for GTK editor matching webview preview -->
  <color name="scrollbar-thumb"   value="#D0D4D8"/>
  <color name="scrollbar-track"   value="#F0F0F0"/>

  <!-- Base text appearance -->
  <style name="text"                  foreground="light-text" background="light-bg"/>
  <style name="selection"             foreground="white" background="light-selection"/>
  <style name="selection-unfocused"   background="light-selection-bg"/>
  <style name="cursor"                foreground="light-cursor"/>
  <style name="secondary-cursor"      foreground="light-cursor"/>
  <style name="current-line"          background="light-current-line"/>
  
  <!-- Line numbers and margin -->
  <style name="line-numbers"          foreground="light-line-num" background="light-line-num-bg"/>
  <style name="current-line-number"   foreground="light-text" background="light-current-line" bold="true"/>
  <style name="line-numbers-border"   background="light-line-num-bg"/>
  
  <!-- Brackets -->
  <style name="bracket-match"         foreground="light-bracket" bold="true"/>
  <style name="bracket-mismatch"      foreground="#CF222E" background="#FFEBE9"/>
  
  <!-- Right margin -->
  <style name="right-margin"          foreground="light-line-num" background="light-bg"/>
  
  <!-- Spaces and whitespace -->
  <style name="draw-spaces"           foreground="light-line-num"/>

  <!-- Syntax highlighting for common languages -->
  <!-- Comments -->
  <style name="def:comment"           foreground="light-comment" italic="true"/>
  <style name="def:shebang"           foreground="light-comment" italic="true"/>
  <style name="def:doc-comment-element" foreground="light-comment" italic="true"/>

  <!-- Keywords -->
  <style name="def:keyword"           foreground="light-keyword" bold="true"/>
  <style name="def:type"              foreground="light-keyword" bold="true"/>
  <style name="def:statement"         foreground="light-keyword" bold="true"/>

  <!-- Strings and characters -->
  <style name="def:string"            foreground="light-string"/>
  <style name="def:character"         foreground="light-string"/>
  <style name="def:special-char"      foreground="light-string"/>

  <!-- Numbers -->
  <style name="def:decimal"           foreground="light-number"/>
  <style name="def:base-n-integer"    foreground="light-number"/>
  <style name="def:floating-point"    foreground="light-number"/>

  <!-- Other elements -->
  <style name="def:preprocessor"      foreground="#8250DF"/>
  <style name="def:identifier"        foreground="light-text"/>
  <style name="def:function"          foreground="#8250DF"/>
  <style name="def:builtin"           foreground="#0550AE"/>
  <style name="def:constant"          foreground="#0550AE"/>
  <style name="def:operator"          foreground="light-text"/>
  <style name="def:error"             foreground="#CF222E" background="#FFEBE9"/>
  <style name="def:warning"           foreground="#9A6700" background="#FFF8C5"/>
  <style name="def:note"              foreground="#0969DA" background="#DDF4FF"/>

  <!-- Markdown specific -->
  <style name="markdown:header"       foreground="light-keyword" bold="true" scale="1"/>
  <style name="markdown:emphasis"     italic="true"/>
  <style name="markdown:strong-emphasis" bold="true"/>
  <style name="markdown:code"         foreground="light-string" background="#F6F8FA"/>
  <style name="markdown:link"         foreground="light-selection" underline="single"/>

  <!-- Extended language elements -->
  <style name="def:special-constant"  foreground="#CF222E"/>
  <style name="def:boolean"           foreground="#CF222E"/>
  <style name="def:reserved"          foreground="#CF222E"/>
  <style name="def:net-address"       foreground="#0969DA" underline="single"/>
  <style name="def:doc-comment-element" foreground="#6E7781" italic="true"/>
  
  <!-- Complex numbers and specialized constants -->
  <style name="def:complex"           foreground="#0550AE"/>
  <style name="def:character"         foreground="#0A3069"/>
  
  <!-- Headings for structured documents -->
  <style name="def:heading0"          foreground="#CF222E" bold="true" scale="1.6"/>
  <style name="def:heading1"          foreground="#CF222E" bold="true" scale="1.5"/>
  <style name="def:heading2"          foreground="#CF222E" bold="true" scale="1.4"/>
  <style name="def:heading3"          foreground="#CF222E" bold="true" scale="1.3"/>
  <style name="def:heading4"          foreground="#CF222E" bold="true" scale="1.2"/>
  <style name="def:heading5"          foreground="#CF222E" bold="true" scale="1.1"/>
  <style name="def:heading6"          foreground="#CF222E" bold="true"/>
  
  <!-- Markup elements -->
  <style name="def:emphasis"          foreground="light-text" italic="true"/>
  <style name="def:strong-emphasis"   foreground="light-text" bold="true"/>
  <style name="def:inline-code"       foreground="#0A3069" background="#F6F8FA"/>
  <style name="def:insertion"         foreground="#1A7F37" background="#F6F8FA"/>
  <style name="def:deletion"          foreground="#CF222E" background="#F6F8FA" strikethrough="true"/>
  <style name="def:link"              foreground="#0969DA" underline="single"/>
  <style name="def:heading"           foreground="#CF222E" bold="true" scale="1.2"/>
  <style name="def:thematic-break"    foreground="#6E7781"/>
  <style name="def:preformatted-section" foreground="#0A3069" background="#F6F8FA"/>
  <style name="def:list-marker"       foreground="#CF222E"/>

  <!-- Additional markdown-specific styles that the language definition uses -->
  <style name="def:link-destination"  foreground="#0969DA" underline="single"/>
  <style name="def:link-text"         foreground="#0969DA"/>
  <style name="def:link-symbol"       foreground="#CF222E"/>
  <style name="def:thematic-break"    foreground="#6E7781"/>
  <style name="def:backslash-escape"  foreground="#116329"/>
  <style name="def:line-break"        foreground="#6E7781"/>

  <!-- Programming language specific -->
  <!-- Python -->
  <style name="python:module-handler" foreground="#8250DF"/>
  <style name="python:decorator"      foreground="#8250DF"/>
  <style name="python:special-variable" foreground="#0550AE"/>
  
  <!-- JavaScript -->
  <style name="js:regex"              foreground="#116329"/>
  <style name="js:template-literal"   foreground="#0A3069"/>
  <style name="js:null-value"         foreground="#CF222E"/>
  
  <!-- HTML -->
  <style name="html:tag"              foreground="#CF222E"/>
  <style name="html:attribute-name"   foreground="#0969DA"/>
  <style name="html:attribute-value"  foreground="#0A3069"/>
  <style name="html:entity"           foreground="#8250DF"/>
  
  <!-- CSS -->
  <style name="css:selector-id"       foreground="#6F42C1"/>
  <style name="css:selector-class"    foreground="#6F42C1"/>
  <style name="css:property-name"     foreground="#0969DA"/>
  <style name="css:property-value"    foreground="#0A3069"/>
  <style name="css:color"             foreground="#0550AE"/>
  
  <!-- XML -->
  <style name="xml:tag"               foreground="#CF222E"/>
  <style name="xml:attribute-name"    foreground="#0969DA"/>
  <style name="xml:attribute-value"   foreground="#0A3069"/>
  <style name="xml:entity"            foreground="#8250DF"/>
  <style name="xml:cdata"             foreground="#1A7F37"/>
  
  <!-- JSON -->
  <style name="json:keyname"          foreground="#0969DA"/>
  <style name="json:null-value"       foreground="#CF222E"/>
  
  <!-- Rust -->
  <style name="rust:macro"            foreground="#8250DF"/>
  <style name="rust:attribute"        foreground="#8250DF"/>
  <style name="rust:lifetime"         foreground="#0550AE"/>
  
  <!-- C/C++ -->
  <style name="c:macro-name"          foreground="#8250DF"/>
  <style name="c:included-file"       foreground="#0A3069"/>
  <style name="c:preprocessor-hash"   foreground="#8250DF"/>
  
  <!-- Additional common elements -->
  <style name="def:shebang"           foreground="#6E7781" italic="true"/>
  <style name="def:special-char"      foreground="#0550AE"/>
  <style name="def:underlined"        underline="single"/>
  
  <!-- Version control diff -->
  <style name="diff:added-line"       foreground="#1A7F37" background="#F6F8FA"/>
  <style name="diff:removed-line"     foreground="#CF222E" background="#F6F8FA"/>
  <style name="diff:changed-line"     foreground="#9A6700" background="#F6F8FA"/>
  <style name="diff:location"         foreground="#0969DA"/>
  
  <!-- Shell/Bash -->
  <style name="sh:variable"           foreground="#0550AE"/>
  <style name="sh:variable-definition" foreground="#0550AE"/>
  
  <!-- SQL -->
  <style name="sql:keyword"           foreground="#CF222E" bold="true"/>
  <style name="sql:function"          foreground="#8250DF"/>

  <!-- Marco-specific syntax highlighting -->
  <!-- Headings (ATX and Setext) -->
  <style name="marco:h1"              foreground="#CF222E" bold="true" scale="1.8"/>
  <style name="marco:h2"              foreground="#CF222E" bold="true" scale="1.6"/>
  <style name="marco:h3"              foreground="#CF222E" bold="true" scale="1.4"/>
  <style name="marco:h4"              foreground="#CF222E" bold="true" scale="1.2"/>
  <style name="marco:h5"              foreground="#CF222E" bold="true" scale="1.1"/>
  <style name="marco:h6"              foreground="#CF222E" bold="true"/>
  <style name="marco:setext-h1"       foreground="#CF222E" bold="true" scale="1.8"/>
  <style name="marco:setext-h2"       foreground="#CF222E" bold="true" scale="1.6"/>
  <style name="marco:heading-marker"  foreground="#6E7781"/>
  
  <!-- Text formatting -->
  <style name="marco:bold"            foreground="light-text" bold="true"/>
  <style name="marco:italic"          foreground="light-text" italic="true"/>
  <style name="marco:bold-italic"     foreground="light-text" bold="true" italic="true"/>
  <style name="marco:strikethrough"   foreground="#6E7781" strikethrough="true"/>
  <style name="marco:highlight"       foreground="#24292E" background="#FFF8C5"/>
  <style name="marco:superscript"     foreground="#0550AE" scale="0.8"/>
  <style name="marco:subscript"       foreground="#0550AE" scale="0.8"/>
  
  <!-- Links and images -->
  <style name="marco:link"            foreground="#0969DA" underline="single"/>
  <style name="marco:link-text"       foreground="#0969DA"/>
  <style name="marco:link-url"        foreground="#0A3069"/>
  <style name="marco:image"           foreground="#1A7F37"/>
  <style name="marco:image-alt"       foreground="#1A7F37"/>
  <style name="marco:autolink"        foreground="#0969DA" underline="single"/>
  <style name="marco:email"           foreground="#0969DA" underline="single"/>
  
  <!-- Code blocks and inline code -->
  <style name="marco:code-inline"     foreground="#0A3069" background="#F6F8FA"/>
  <style name="marco:code-block"      foreground="#0A3069" background="#F6F8FA"/>
  <style name="marco:fenced-code"     foreground="#0A3069" background="#F6F8FA"/>
  <style name="marco:language-id"     foreground="#CF222E" background="#F6F8FA"/>
  
  <!-- Math -->
  <style name="marco:math-inline"     foreground="#0550AE" background="#F6F8FA"/>
  <style name="marco:math-block"      foreground="#0550AE" background="#F6F8FA"/>
  <style name="marco:math-symbol"     foreground="#0550AE"/>
  
  <!-- Lists -->
  <style name="marco:list-marker"     foreground="#CF222E" bold="true"/>
  <style name="marco:task-marker"     foreground="#0550AE" bold="true"/>
  <style name="marco:task-complete"   foreground="#1A7F37" bold="true"/>
  <style name="marco:task-metadata"   foreground="#6E7781"/>
  
  <!-- Blockquotes -->
  <style name="marco:blockquote"      foreground="#6E7781" italic="true"/>
  <style name="marco:blockquote-marker" foreground="#CF222E"/>
  
  <!-- Tables -->
  <style name="marco:table-header"    foreground="light-text" bold="true" background="#C8E1FF"/>
  <style name="marco:table-separator" foreground="#CF222E"/>
  <style name="marco:table-cell"      foreground="light-text"/>
  
  <!-- Horizontal rules -->
  <style name="marco:horizontal-rule" foreground="#6E7781"/>
  
  <!-- Footnotes -->
  <style name="marco:footnote-ref"    foreground="#8250DF"/>
  <style name="marco:footnote-def"    foreground="#8250DF"/>
  <style name="marco:inline-footnote" foreground="#8250DF" background="#F6F8FA"/>
  
  <!-- Comments -->
  <style name="marco:comment"         foreground="#6E7781" italic="true"/>
  
  <!-- HTML elements -->
  <style name="marco:html-tag"        foreground="#CF222E"/>
  <style name="marco:html-attribute"  foreground="#0969DA"/>
  
  <!-- Marco-specific extensions -->
  <!-- Admonitions -->
  <style name="marco:admonition-marker" foreground="#8250DF" bold="true"/>
  <style name="marco:admonition-note"  foreground="#0969DA" background="#DDF4FF"/>
  <style name="marco:admonition-tip"   foreground="#1A7F37" background="#F6F8FA"/>
  <style name="marco:admonition-warning" foreground="#9A6700" background="#FFF8C5"/>
  <style name="marco:admonition-danger" foreground="#CF222E" background="#FFEBE9"/>
  <style name="marco:admonition-info"  foreground="#1A7F37" background="#F6F8FA"/>
  
  <!-- User mentions -->
  <style name="marco:user-mention"    foreground="#8250DF" bold="true"/>
  <style name="marco:platform"        foreground="#8250DF"/>
  <style name="marco:display-name"    foreground="#1A7F37"/>
  
  <!-- Tab blocks -->
  <style name="marco:tab-marker"      foreground="#8250DF" bold="true"/>
  <style name="marco:tab-title"       foreground="#8250DF"/>
  <style name="marco:tab-name"        foreground="#0550AE"/>
  
  <!-- Bookmarks -->
  <style name="marco:bookmark"        foreground="#8250DF" background="#F6F8FA"/>
  
  <!-- Page tags and document references -->
  <style name="marco:page-tag"        foreground="#8250DF"/>
  <style name="marco:doc-ref"         foreground="#0969DA" underline="single"/>
  
  <!-- Table of contents -->
  <style name="marco:toc"             foreground="#1A7F37"/>
  <style name="marco:toc-depth"       foreground="#0550AE"/>
  
  <!-- Run commands -->
  <style name="marco:run-keyword"     foreground="#8250DF" bold="true"/>
  <style name="marco:script-type"     foreground="#CF222E" bold="true"/>
  <style name="marco:run-command"     foreground="#0A3069" background="#F6F8FA"/>
  
  <!-- Diagrams -->
  <style name="marco:diagram-type"    foreground="#8250DF" bold="true"/>
  <style name="marco:diagram-content" foreground="#1A7F37" background="#F6F8FA"/>
  
  <!-- YouTube embeds -->
  <style name="marco:youtube"         foreground="#CF222E" background="#F6F8FA"/>
  
  <!-- Definition lists -->
  <style name="marco:def-term"        foreground="light-text" bold="true"/>
  <style name="marco:def-definition"  foreground="#6E7781"/>
  
  <!-- Emojis -->
  <style name="marco:emoji"           foreground="#9A6700"/>
  
  <!-- Keywords and special markers -->
  <style name="marco:keyword"         foreground="#CF222E" bold="true"/>
  <style name="marco:escape-char"     foreground="#0550AE"/>
  <style name="marco:line-break"      foreground="#6E7781"/>
  
  <!-- Marco grammar specific elements -->
  <style name="marco:whitespace"      foreground="#6E7781"/>
  <style name="marco:newline"         foreground="#6E7781"/>
  <style name="marco:indent"          foreground="#6E7781"/>
  <style name="marco:marker"          foreground="#CF222E"/>
  <style name="marco:delimiter"       foreground="#8250DF"/>
  <style name="marco:content"         foreground="light-text"/>
  <style name="marco:punctuation"     foreground="#6E7781"/>
  <style name="marco:special-char"    foreground="#0550AE"/>
</style-scheme>
