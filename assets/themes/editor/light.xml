<?xml version="1.0" encoding="UTF-8"?>
<!--
  Light theme for Marco Editor
  Based on LIGHT_PALETTE: background: "#FAFAFA", text: "#24292E"
  
  IMPORTANT RESTRICTIONS:
  - Only use HEX colors (e.g., #RRGGBB) - no color names, no rgb()
  - Do NOT use: bold, italic, underline, strikethrough, or any font properties
  - Background colors are ONLY for search highlighting - not for syntax highlighting
  - LSP syntax highlighting will be implemented separately using GTK TextTags
-->
<style-scheme id="marco-light" name="Marco Light" version="1.0" kind="light">
  <author>Kim Skov Rasmussen</author>
  <description>Light theme with clean appearance</description>

  <!-- Scrollbar styling for GTK editor matching webview preview -->
  <color name="scrollbar-thumb"   value="#D0D4D8"/>
  <color name="scrollbar-track"   value="#F0F0F0"/>

  <!-- Base text appearance -->
  <style name="text"                  foreground="#24292E" background="#FAFAFA"/>
  <style name="selection"             foreground="#FFFFFF" background="#0366D6"/>
  <style name="selection-unfocused"   background="#C8E1FF"/>
  <style name="cursor"                foreground="#0969DA"/>
  <style name="secondary-cursor"      foreground="#0969DA"/>
  <style name="current-line"          background="#F6F8FA"/>
  
  <!-- Line numbers and margin -->
  <style name="line-numbers"          foreground="#6E7781" background="#E8EAED"/>
  <style name="current-line-number"   foreground="#24292E" background="#E8EAED"/>
  <style name="line-numbers-border"   background="#E8EAED"/>
  
  <!-- Brackets -->
  <style name="bracket-match"         foreground="#0969DA"/>
  <style name="bracket-mismatch"      foreground="#CF222E" background="#FFEBE9"/>
  
  <!-- Spaces and whitespace -->
  <style name="draw-spaces"           foreground="#6E7781"/>
  
  <!-- Search highlighting (background colors allowed ONLY for search) -->
  <style name="search-match"          foreground="#24292E" background="#FFD700"/>
  <style name="search-match-selected" foreground="#FFFFFF" background="#FF6B35"/>
  
  <!-- LSP Syntax Highlighting (colors only, no font properties) -->
  <style name="lsp-heading1"          foreground="#0969DA"/>
  <style name="lsp-heading2"          foreground="#1A7DC6"/>
  <style name="lsp-heading3"          foreground="#2B8AB2"/>
  <style name="lsp-heading4"          foreground="#3C979E"/>
  <style name="lsp-heading5"          foreground="#4DA48A"/>
  <style name="lsp-heading6"          foreground="#5EB176"/>
  <style name="lsp-emphasis"          foreground="#A65E2B"/>
  <style name="lsp-strong"            foreground="#CF222E"/>
  <style name="lsp-link"              foreground="#0969DA"/>
  <style name="lsp-image"             foreground="#0969DA"/>
  <style name="lsp-code-span"         foreground="#0A3069"/>
  <style name="lsp-code-block"        foreground="#6E7781"/>
  <style name="lsp-inline-html"       foreground="#CF222E"/>
  <style name="lsp-hard-break"        foreground="#6E7781"/>
  <style name="lsp-soft-break"        foreground="#24292E"/>
  <style name="lsp-thematic-break"    foreground="#8B7DAE"/>
  <style name="lsp-blockquote"        foreground="#1A7F37"/>
  <style name="lsp-html-block"        foreground="#CF222E"/>
  <style name="lsp-list"              foreground="#24292E"/>
  <style name="lsp-list-item"         foreground="#24292E"/>
</style-scheme>